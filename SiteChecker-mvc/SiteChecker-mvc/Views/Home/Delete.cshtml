@model WebSites

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card shadow border-0 mt-40">
<div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Delete Website</h2>
        </div>
    </div>
</div>


<div class="card-body p-4">

    <form method="post">
        <input asp-for="PK_WebSite" hidden />
        <div class="border p-3 mt-4">

            <div class="row pb-2">
                   
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" disabled type="text" class="form-control border-0 shadow" />
                <label asp-for="Name"  disabled class="ms-2"> </label>



            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Url" disabled="" type="text" class="form-control border-0 shadow" />
                <label asp-for="Url"  disabled class="ms-2"> </label>



            </div>
            <div class="row mt-3">
                <div class="col-6 col-md-3"> <button type="submit" class="btn btn-danger form-control">Delete</button> </div>
                <div class="col-6 col-md-3"> <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a> </div>
            </div>
        </div>
    </form>
</div>
</div>