@model IEnumerable<SiteChecker_mvc.Models.WebSites>
@* @model List<WebSites> *@
@{
    ViewBag.Title = "Index";
}

<h2>All Web Sites</h2>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PK_WebSite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServerStatus)
        </th>
        <th>
            <a asp-controller="Home" asp-action="Create" class="btn btn-success mx-2">
                <i class="bi bi-pencil-square"></i>
                Create New Web Site
            </a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @* @Html.DisplayFor(modelItem => item.Name) *@
                @item.PK_WebSite
            </td>
        <td>
            @* @Html.DisplayFor(modelItem => item.Name) *@
            @item.Name
        </td>
        <td>
            @* @Html.DisplayFor(modelItem => item.Url) *@
            @item.Url
        </td>
        <td>
            @* @Html.DisplayFor(modelItem => item.ServerStatus) *@
            @item.ServerStatus
        </td>
        <td>
            @* @Html.ActionLink("Edit", "Edit", new { id=item.PK_WebSite }) | *@
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.PK_WebSite" class="btn btn-primary mx-2">
                <i class="bi bi-pencil-square"></i>
                Edit
            </a>

            @* @Html.ActionLink("Delete", "Delete", new { id=item.PK_WebSite }) *@
            <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.PK_WebSite" class="btn btn-danger mx-2">
                <i class="bi bi-pencil-square"></i>
                Delete
            </a>
            <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.PK_WebSite" class="btn btn-warning mx-2">
                <i class="bi bi-pencil-square"></i>
                Detail
            </a>
        </td>
    </tr>
    }
    </tbody>
</table>