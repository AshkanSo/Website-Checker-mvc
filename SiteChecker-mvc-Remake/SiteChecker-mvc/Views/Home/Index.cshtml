                    <div class="box-title">
                        <h3 style="margin-top: 20px">@item.Name</h3>
                    </div>
                    <div class="box-text">
                       @if (item.ServerStatus == true)
                              {
                                 <span style="color: green">@item.ServerStatus</span>
                              }
