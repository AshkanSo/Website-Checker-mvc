    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-xs-12 text-center" style=" margin-top: 150px ; margin-left: 15px;  box-shadow: 0px  0px 20px 0 rgba(0, 0, 0, 0.144);background: linear-gradient(to right, #e0eafc, #cfdef3);">
