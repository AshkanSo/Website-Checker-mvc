                            {
                           <span style="color: red">@item.ServerStatus</span>
                            }
                    </div>
                    <div class="box-btn">
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.PK_WebSite" class="btn btn-primary mx-2" style="margin-bottom: 20px  "> 
                            <i class="bi bi-pencil-square" ></i> 
                            ویرایش 
                        </a>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.PK_WebSite" class="btn btn-danger mx-2" style="margin-bottom: 20px"> 
                            <i class="bi bi-pencil-square"></i> 
                            حذف 
                        </a>
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.PK_WebSite" class="btn btn-warning mx-2" style="margin-bottom: 20px"> 
